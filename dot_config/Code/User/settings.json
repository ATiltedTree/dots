{
  "C_Cpp.clang_format_fallbackStyle": "LLVM",
  "cSpell.language": "de,en",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.fontFamily": "Fira Code, Symbols Nerd Font",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.rulers": [80],
  "editor.tabCompletion": "on",
  "files.insertFinalNewline": true,
  "git.autoStash": true,
  "githubPullRequests.defaultMergeMethod": "squash",
  "gitlens.recentChanges.highlight.locations": ["gutter", "overview"],
  "terminal.external.linuxExec": "konsole",
  "terminal.integrated.cursorStyle": "line",
  "workbench.iconTheme": "material-icon-theme",
  "files.associations": {
    ".firebaserc": "json",
    "*.idl": "idl",
    "*.rc": "cpp",
    "*.am": "makefile",
    "*.ll": "lex",
    ".clang-tidy": "yaml",
    "*.qrc": "xml",
    "*.desktop": "ini"
  },
  "oneDarkPro.vivid": true,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "window.menuBarVisibility": "hidden",
  "search.smartCase": true,
  "cSpell.allowCompoundWords": true,
  "C_Cpp.updateChannel": "Insiders",
  "cmake.generator": "Ninja",
  "editor.formatOnSave": true,
  "cSpell.enableFiletypes": ["cmake", "properties", "toml"],
  "gitlens.codeLens.enabled": false,
  "material-icon-theme.files.associations": {
    "*.rc": "cpp"
  },
  "cSpell.userWords": [
    "APASS",
    "AUTOMOC",
    "AUTORCC",
    "CPACK",
    "DCMAKE",
    "GOPATH",
    "LLVM",
    "NSIS",
    "Qt",
    "UCRT",
    "apasstools",
    "cmake",
    "decompressor",
    "hicolor",
    "jurplel",
    "libc",
    "libqt",
    "librpac",
    "libstdc",
    "mkdir",
    "msvc",
    "opengl",
    "qtsvg",
    "rpac",
    "windeployqt"
  ],
  "json.format.enable": false,
  "yaml.format.enable": false,
  "files.trimTrailingWhitespace": true,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "cmake.configureOnOpen": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.startupEditor": "newUntitledFile",
  "rewrap.wrappingColumn": 80,
  "cmake.revealLog": "never",
  "[rust]": {
    "editor.tabSize": 4
  },
  "latex-workshop.message.update.show": false,
  "latex-workshop.view.pdf.viewer": "tab",
  "git.autofetch": true,
  "workbench.list.smoothScrolling": true,
  "workbench.colorTheme": "One Dark Pro",
  "files.exclude": {
    "**/node_modules": true,
    "**/target": true
  }
}
